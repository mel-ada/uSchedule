<% include header %>
<% include navigation %>

<h4>Employee Schedule</h4>


<head>
<style>
table {
    width:100%;
}
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;
}
table#t01 tr:nth-child(even) {
    background-color: #eee;
}
table#t01 tr:nth-child(odd) {
   background-color:#fff;
}
table#t01 th	{
    background-color: black;
    color: white;
}
</style>
</head>

<body>


 <% if(rs.length > 0) { %>


<table>
  <tr>
    <th>Day</th>
    <th>In</th>		
    <th>Out</th>
    <th>Station</th>
  </tr>
  
  <% for (var i=0; rs.length > i; i++) { %>
            <tr>
             <td> <%= rs[i].sh_Day %> </td>
	     <td> <%= rs[i].sh_startTime %> </td>
	     <td> <%= rs[i].sh_endTime %> </td>
	     <td> <%= rs[i].sh_stnName %> </td>
            </tr>
        <% } %>
</table>
  <% } else { %>
	No shifts have been scheduled for this employee.
  <% } %>



