<!-- This is a stylesheet for employeeform.ejs -->

<!DOCTYPE html>
<html>

<style>
div.container {
        width: 300px;
        height: 610px;
        margin: 35px auto;
}

div.main {
        width: 300px;
        padding: 10px 50px 25px;
        border: 2px solid gray;
        border-radius: 10px;
        float:left;
        margin-top:30px;
}

input[type=text] {
        width: 43%;
        height: 10px;
        padding: 5px;
        margin-bottom: 0px;
        margin-top: 0px;
        border: 2px solid #ccc;
        color: #4f4f4f;
        font-size: 14px;
        border-radius: 5px;
}


input[type=password] {
        width: 43%;
        height: 10px;
        padding: 5px;
        margin-bottom: 7px;
        margin-top: 2px;
        border: 2px solid #ccc;
        color: #4f4f4f;
        font-size: 14px;
        border-radius: 5px;
}

label {
	color: white;
	height: 10px;
	font-size: 16px;
}

input[type=submit] {
        font-size: 12px;
        height: 22px;
	background: linear-gradient(#ffbc00 5%, #ffdd7f 100%);
        border: 1px solid #e5a900;
        color: #4E4D4B;
        font-weight: bold;
        cursor: pointer;
        width: 22%;
        border-radius: 5px;
        margin-bottom:5px;
        padding: 5px 0;
        outline:none;
}


button {
        font-size: 12px;
        height: 22px;
        background: linear-gradient(#ffbc00 5%, #ffdd7f 100%);
        border: 1px solid #e5a900;
        color: #4E4D4B;
        font-weight: bold;
        cursor: pointer;
        width: 22%;
        border-radius: 5px;
        margin-bottom:5px;
        padding: 5px 0;
        outline:none;
}


form {
        display: inline-block;
        float: left;
        clear: left;
        width: 500px;
        text-align: left;
}

input {
        vertical-align: bottom;
        border: 1px solid gray;
}


select {
        vertical-align: bottom;
        border: 1px solid gray;
}

</style>
