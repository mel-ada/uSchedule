<% include header %>
<% include styleForm %>

<div id="nav">
    <button><a href="/employee/home">Home</a></button>
</div>

<div id="section">

<div>
    <h2>Sign Up </h2>
    <p>Fill out this form to add a new employee.</p>
</div>

<style>
#sep {
    height: 2px;
    background: #D1F0FF;
    width: 1300px;
    margin: 0px -25px; 
}
</style>

<div id="sep"> </div>
<br>
<br>

<div id="form">
    <form method="POST" action="/employee/createNew">
    <table id="login">
	<tr>
        <td>Username:</td>
        <td><input type="text" id="e_username" name="e_username" /></td>
        </tr>

	<tr>
        <td>Password:</td>
        <td><input type="password" id="e_password" name="e_password" /></td>
        </tr>

    	<tr>
	<td>Record Number:</td>
        <td><input type="text" id="e_SSN" name="e_SSN" /></td>
       	</tr>

	<tr>
	<td>First Name:</td>
        <td><input type="text" id="e_FN" name="e_FN" /></td>
       	</tr>
       
	<tr>
	<td>Last Name:</td>
        <td><input type="text" id="e_LN" name="e_LN" /></td>
       	</tr>
      
	<tr>
	<td>Employee Level:</td>
	<td>
	    <select name="levels">
            	<% for (var i = 0; i < levels.length; i++) { %>
            	    <option value='<%= levels[i].l_level %>'>
                    	<%= levels[i].l_Desc %>
            	    </option>
            	<% } %>
	    </select>
	</td>
        </tr>
      
	<tr>
 	<td>Department:</td>
        <td>
	    <select name="department">
      		<% for (var i = 0; i < department.length; i++) { %>
		    <option value='<%= department[i].d_name %>'>
			<%= department[i].d_name %>
		    </option>
		<% } %>
	    </select>
	</td>
	</tr>
    </table> 

<br> 

</div>
    <input type="submit" value="Add Employee">
    <input type="reset" value="Clear Form">
</form>

